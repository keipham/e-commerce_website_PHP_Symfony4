{% extends 'base.html.twig' %}

{% block title %}Games index{% endblock %}

{% block body %}
    <h1>Games index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Duration</th>
                <th>PlayerMin</th>
                <th>Picture</th>
                <th>PlayerMax</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.name }}</td>
                <td>{{ game.description }}</td>
                <td>{{ game.duration }}</td>
                <td>{{ game.playerMin }}</td>
                <td>{{ game.picture }}</td>
                <td>{{ game.playerMax }}</td>
                <td>
                    <a href="{{ path('games_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('games_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('games_new') }}">Create new</a>
{% endblock %}
