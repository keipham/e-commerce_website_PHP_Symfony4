{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block body %}
    <div class="container mt-3">
        <br/>
        <h1 class='mt-3'>Votre formulaire de contact :</h1>
        {{form_start(form)}}
        <div class="row ">
            <div class="col-md-5">
                {{form_row(form.username, {'attr':{'placeholder':"votre nom"}})}}
            </div>
        </div>
        <div class="row ">
            <div class="col-md-5">
                    {{form_row(form.email, {'attr':{'placeholder':"votre email"}})}}
            </div>
        </div>
        <div class="row ">
            <div class="col-md-5">
                {{form_row(form.object)}}
            </div>
        </div>
        <div class="row ">
            <div class="col-md-5">
                {{form_row(form.message, {'attr':{'placeholder':"votre message"}})}}
            </div>
        </div>
    
        <div class="row ">
            <div class="col-md-5">
                {{form_row(form.email_validation)}}
            </div>
        </div>
    </div>
{{form_rest(form)}}
<button class="btn btn-primary ml-10">Envoyer</button>
{{form_end(form)}}</div>{% endblock %}