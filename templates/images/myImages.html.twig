{% extends 'base.html.twig' %}

{% block title %}Mes Images{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
    <h1>Mes Images</h1>
        
    <table class="table" width="60px">
        <thead>
            <tr>
                <th>Id</th>
                <th>Images</th>
              
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td><img src="/images/pictures_clients/{{ image.image }}" width="100px"/></td>
              
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('admin_users_new') }}">Cr√©er un nouvel utilisateur</a>
{% endblock %}
