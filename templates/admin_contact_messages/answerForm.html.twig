        <br/>
        <h1 class='mt-3'>Composer votre réponse au client {{username}}:</h1>
        <p>Le mail sera automatiquement envoyé à son adresse : {{email}}</p>
        {{form_start(form)}}
       
        <div class="row ">
            <div class="col-md-5">
                {{form_row(form.AnswerToCustomer, {'attr':{'placeholder':"votre Réponse au client"}})}}
            </div>
        </div>
    </div>
{{form_rest(form)}}
<button class="btn btn-primary ml-10">Envoyer</button>
{{form_end(form)}}</div>{% endblock %}