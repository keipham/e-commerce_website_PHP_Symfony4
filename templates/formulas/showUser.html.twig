{% extends 'base.html.twig' %}

{% block title %}Games{% endblock %}

{% block body %}
    <h1>{{ game.name }}</h1>
        <img class="middle" src="/images/{{ game.picture }}" height="450px"/>
        <p class="w-body">{{ game.description }}</p><br>
        <p class="w-body">Durée du jeu : {{ game.duration }}</p>
        <p class="w-body">Nombre de joueurs minimum : {{ game.playerMin }}</p>
        <p class="w-body">Nombre de joueur maximum : {{ game.playerMax }}</p><br>
        <a class="btn btn-success middle" href="">Réserver</a><br><br>
{% endblock %}
