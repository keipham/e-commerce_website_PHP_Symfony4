{% extends 'base.html.twig' %}

{# {% form_theme form 'bootstrap_4_layout.html.twig' %} #}

{% block body %}
    <h1>Retour d'expérience !</h1>
    <STYLE>
        a:hover {color:red;}
    </STYLE>
    <form action="{{ path('comments_new', {'id': comment.id, 'user': app.user.id}) }}" method="post">
        <div class="form-group">
            <label>Votre statisfaction sur une échelle de 0 à 5:</label>
            <select required name="overallRating" type="number" class="form-control">
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select> 
        </div>
        <div class="form-group">
            <label>Commentaire relatif à votre expérience:</label>
            <input name="comment" type="text" class="form-control"> 
        </div>
        <div class="form-group">
            <input placeholder="Jumanji" name="Jumanji" type="number" class="form-control"> 
        </div>
        <div class="form-group">
            <input placeholder="Voodoo" name="Voodoo" type="number" class="form-control"> 
        </div>
        <div class="form-group">
            <input placeholder="Assassin" name="Assassin" type="number" class="form-control"> 
        </div>
        <div class="form-group">
            <input placeholder="TheCabin" name="TheCabin" type="number" class="form-control"> 
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Envoyer</button>
        </div>
        
    </form>
{% endblock %}