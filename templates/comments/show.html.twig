{% extends 'base.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}
    <h1>Comments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>UserId</th>
                <td>{{ comment.userId }}</td>
            </tr>
            <tr>
                <th>FormulaId</th>
                <td>{{ comment.formulaName }}</td>
            </tr>
            <tr>
                <th>OverallRating</th>
                <td>{{ comment.overallRating }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ comment.comment }}</td>
            </tr>
            <tr>
                <th>Feedback</th>
                <td>{{ comment.feedback ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Jumanji</th>
                <td>{{ comment.Jumanji }}</td>
            </tr>
            <tr>
                <th>Voodoo</th>
                <td>{{ comment.Voodoo }}</td>
            </tr>
            <tr>
                <th>Assassin</th>
                <td>{{ comment.Assassin }}</td>
            </tr>
            <tr>
                <th>TheCabin</th>
                <td>{{ comment.TheCabin }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comments_index', {'id': app.user.id}) }}">back to list</a>

    <a href="{{ path('comments_edit', {'id': comment.id, 'user': app.user.id}) }}">edit</a>

    {{ include('comments/_delete_form.html.twig') }}
{% endblock %}
