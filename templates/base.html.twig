<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        <link rel="stylesheet" href="https://bootswatch.com/4/sketchy/bootstrap.min.css">
        <link rel="stylesheet" href="/css/style.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        {% block stylesheets %}{% endblock %}
        <style>
            a { color: white; } /* CSS link color */
            a:hover { color:white; }
        </style>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary navbar-fixed-top">
            <a href="/"><img src="/images/logo-escape.png" alt="logo-escape-game" height="80" width="80"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    {% if not app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('formulas_index')}}">Nos Formules</a>
                        </li>
                        <li class="nav-item">
                        <a  class="nav-link" href="#"  style="color:yellow">< Invité ></a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_users_index')}}"> Users </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_games_index')}}">Nos Jeux</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_formulas_index')}}">Nos Formules</a>
                        </li>
                        
                        <li class="nav-item">
                        <a  class="nav-link" href="#" style="color:yellow">< Admin ></a>
                        </li>
                    {% endif %}
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('users_show', {
                                'id':app.user.id
                            })}}">Mon Profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('formulas_index')}}">Nos Formules</a>
                        </li>
                        <li class="nav-item">
                        <a  class="nav-link" href="#"  style="color:yellow">< Invité ></a>
                        </li>
                    {% endif %}
                    
                     
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <ul class="navbar-nav mr-auto">
                    {% if not app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('register')}}">S'inscrire</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login')}}">Se connecter</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('logout') }}">Se déconnecter</a>
                        </li>
                    {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('contact')}}">Nous contacter</a>
                        </li>
                    </ul>
                    <form name="form" action="/mymovie" method="post">
                        <input class="form-control mr-sm-2" type="text" placeholder="On va jouer à un jeu..." name="movie" id="movie">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Rechercher</button>
                    </form>
                    
                </form>
            </div>
        </nav>
            {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>

    <footer>
         
    </footer>
</html>
